<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:gravity="bottom|center"
    android:orientation="vertical"
    tools:context=".CalculatorActivity">


    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/show_values"
            android:layout_width="0dp"
            android:layout_marginStart="25dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:layout_weight="3" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:background="@color/background"
            android:scaleType="fitXY"
            android:text="@string/delete"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageBtn7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_seven" />

        <ImageButton
            android:id="@+id/imageBtn8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_eight" />

        <ImageButton
            android:id="@+id/imageBtn9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_nine" />

        <ImageButton
            android:id="@+id/imageBtnDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@color/background"
            app:srcCompat="@drawable/ic_divide_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageBtn4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_four" />

        <ImageButton
            android:id="@+id/imageBtn5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_five" />

        <ImageButton
            android:id="@+id/imageBtn6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_six" />

        <ImageButton
            android:id="@+id/imageBtnMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@color/background"
            app:srcCompat="@drawable/ic_multiply_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageBtn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:background="@color/background"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_one" />

        <ImageButton
            android:id="@+id/imageBtn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_two" />

        <ImageButton
            android:id="@+id/imageBtn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@color/background"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_three" />

        <ImageButton
            android:id="@+id/imageBtnSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@color/background"
            app:srcCompat="@drawable/ic_subtract_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@color/background"
            android:scaleType="fitXY"
            android:text="@string/dot"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageBtn0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_zero" />

        <ImageButton
            android:id="@+id/imageBtnEqual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@color/background"
            app:srcCompat="@drawable/ic_equal_icon" />

        <ImageButton
            android:id="@+id/imageBtnAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/background"
            app:srcCompat="@drawable/ic_plus_icon" />
    </LinearLayout>


</LinearLayout>