<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="bottom|end"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="25dp"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/delete" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageBtn7"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_seven" />

            <ImageButton
                android:id="@+id/imageBtn4"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_four" />

            <ImageButton
                android:id="@+id/imageBtn1"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_one" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="@string/dot"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageBtn8"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_eight" />

            <ImageButton
                android:id="@+id/imageBtn5"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_five" />

            <ImageButton
                android:id="@+id/imageBtn2"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_two" />

            <ImageButton
                android:id="@+id/imageBtn0"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_zero" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageBtn9"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_nine" />

            <ImageButton
                android:id="@+id/imageBtn6"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_six" />

            <ImageButton
                android:id="@+id/imageBtn3"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_three" />

            <ImageButton
                android:id="@+id/imageBtnEqual"
                android:layout_width="80dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_equal_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageBtnDivide"
                android:layout_width="80dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_divide_icon" />

            <ImageButton
                android:id="@+id/imageBtnMultiply"
                android:layout_width="80dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_multiply_icon" />

            <ImageButton
                android:id="@+id/imageBtnSub"
                android:layout_width="80dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_subtract_icon" />

            <ImageButton
                android:id="@+id/imageBtnAdd"
                android:layout_width="80dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_plus_icon" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>